<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.startup.piura.eventos">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.WellcomeActivity"
            android:label="@string/title_activity_wellcome"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activities.DetailEventActivity"
            android:label="@string/title_activity_detail_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activities.PreferenceActivity"
            android:label="@string/title_activity_preference"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>